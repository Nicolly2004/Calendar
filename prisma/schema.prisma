generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  name String
  email String @unique
  nameUser String
  senha String
  events Event[]
}


model Event {
  id String @id @default(uuid())
  title String
  content String
  isActive  Boolean @default(false)
  author User @relation(fields: [authorId],references: [id])
  authorId String
}